@model WebApplication.Web.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<body>
    <div class="login-background-img">
        <form class="login-container" asp-controller="Account" asp-action="Login" method="post">
                <h2 class="center-text">Login</h2>

                <element class="error-message"><strong>@Html.ValidationMessage("combo-not-correct")</strong></element>
                <label asp-for="Username"></label>
                <input asp-for="Username" />
                <br />

                <label asp-for="Password">Password</label>
                <input asp-for="Password" />
                <br />

                <input class="button" type="submit" value="Submit">
        </form>
      </div>
</body>
